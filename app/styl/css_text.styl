body
  background-color #164b69
  font-size 14px
  font-family Arial
div
  img
    width 100%
    height 100%
    display block
    margin 0 auto
.CSS_text
  background-color #dcdcdc
.container
  background-color #e3e3e3
  min-width 700px
  min-height 700px
  width 70%
  margin 0 auto
.menu
  font-weight bold
  & > ul
    display flex
    list-style none
    align-items center
    justify-content space-evenly
    padding-top 5px
li
  padding 10px
.central
  width 100%
  height 90%
  margin-top 15px
.row_first
  display flex
  justify-content space-around
  height 50%
  margin-top 5px
  margin-bottom 10px
  .big
    border 1px solid green
    width 60%
  .small
    width 30%
.first, .second
  border 1px solid goldenrod
  height 45%
.first
  margin-bottom 15px
.row_second
  display flex
  justify-content space-around
  height 45%
.bottom
  width 100%
  display flex
  justify-content space-around
.p1, .p2, .p3
  border 1px solid black
  width 30%
